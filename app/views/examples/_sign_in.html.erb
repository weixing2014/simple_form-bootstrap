<%= simple_form_for @user_inline,
                    url: create_inline_examples_url do |f| %>
  <%= f.error_notification %>

  <%= f.input :email, placeholder: 'Enter email' %>

  <%= f.input :password, placeholder: 'Password' %>

  <%= f.button :submit, 'Sign In', class: 'btn btn-primary btn-block' %>

  <%= f.input :active, inline_label: 'Remember me' %>

  <a>Create Account</a> / <a href="">Sign in with Google</a>

<% end %>
